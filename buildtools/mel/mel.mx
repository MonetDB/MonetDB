void
check_lineno(char *line)
{
	int l;

	if (sscanf(line, "%d", &l) == 1) {
		char *p = strchr(line + 1, '"');

		if (p) {
			char *filename = (char *) strdup(++p);

			yyset_lineno(l);
			p = strchr(filename, '"');
			if (p)
				*p = 0;
			if (filename)
				fileinfo->FileName(filename);
		}
	}
}

