void
mel_yyerror(const char *err)
{
	if (progname) {
		cerr << progname << ": ";
	}
	if (fileinfo->FileName()) {
		cerr << "\"" << fileinfo->FileName() << "\", ";
	}
	if (yyget_lineno() > 0) {
		cerr << "line " << (yyget_lineno()) << ", ";
	}
	cerr << err;
	if (*yytext) {
		int i;

		for (i = 0; i < 20; i++) {
			if (!yytext[i] || yytext[i] == '\n') {
				break;
			}
		}
		if (i) {
			cerr << " at \"" << i << "\" of " << yytext;
		}
	} else {
		cerr << " at end-of-file";
	}
	cerr << ".\n";
	parse_error++;
}

