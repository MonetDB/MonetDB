    if (@1 == NULL) {
        send_err(out, ERR404, "env:Sender", "Shredded BAT @1 unavailable");
        goto cleanup;
    }
@c
    @:getbat(pre_size,PRE_SIZE)@
    @:getbat(pre_level,PRE_LEVEL)@
    @:getbat(pre_prop,PRE_PROP)@
    @:getbat(pre_kind,PRE_KIND)@
