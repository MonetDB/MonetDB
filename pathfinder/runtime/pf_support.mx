		                   min_iter, max_iter, (and(order,2) = 0), kind_test);
                               
                @:resolve_unique_iters()@

		result := new(void,bat,2).seqbase(0@0)
		          .append(res.mark(0@0).reverse())
		          .append(res.reverse().mark(0@0).reverse())
		          .access(BAT_READ);
	}

        @:post_sort_output@
	
	return result;
}
