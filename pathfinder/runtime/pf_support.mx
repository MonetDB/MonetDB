#  print("rename_qn_uri");rename_qn_uri.count().print();info(rename_qn_uri).print();
#  print("rename_qn_prefix");rename_qn_prefix.count().print();info(rename_qn_prefix).print();
#  print("rename_qn_local");rename_qn_local.count().print();info(rename_qn_local).print();
#  print("pre_ins");pre_ins.count().print();info(pre_ins).print();
#  print("pre_cont_ins");pre_cont_ins.count().print();info(pre_cont_ins).print();
#  print("attr_ins");attr_ins.count().print();info(attr_ins).print();
#  print("attr_cont_ins");attr_cont_ins.count().print();info(attr_cont_ins).print();
#  print(command,pre_tgt,pre_cont_tgt,attr_tgt,attr_cont_tgt,replace_strings,rename_qn_uri,rename_qn_prefix,rename_qn_local,pre_ins,pre_cont_ins,attr_ins,attr_cont_ins);

  # [void,oid] list of all conts of affected documents
  # since either the pre_cont_tgt or the attr_cont_tgt value is nil, we filter out nils
# work around a bug in MonetDB: the kunion() produces a bat with two nil values in the head but also with key property set
#  var affected_conts := kunion(pre_cont_tgt.tunique(), attr_cont_tgt.tunique()).reverse().select(oid_nil,oid_nil).tmark(0@0);
  var affected_conts := kunion(pre_cont_tgt.select(oid_nil,oid_nil).tunique(), attr_cont_tgt.select(oid_nil,oid_nil).tunique()).reverse().tmark(0@0);

  if (affected_conts.count() = 0) {
