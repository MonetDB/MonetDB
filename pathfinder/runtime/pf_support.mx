	for (t=0; t<ntabs && BATcount(b[t][0]) <= 1; t++);
        if (t<ntabs && !(BATtordered(b[t][0])&1) && !(reverse = (BATtordered(b[t][0]) == (bit) GDK_SORTED_REV))) {
                GDKerror("merged_union: tail of first BAT/column of table %d must be (reverse-)sorted.\n", t+1);
                return GDK_FAIL;
        }
        if (reverse) {
                for (; t<ntabs; t++) {
                        if (BATcount(b[t][0])>1 && !(BATtordered(b[t][0]) == (bit) GDK_SORTED_REV)) {
                                GDKerror("merged_union: tail of first BAT/column of table %d must be reverse-sorted.\n", t+1);
                                return GDK_FAIL;
