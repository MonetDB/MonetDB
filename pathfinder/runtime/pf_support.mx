int
CMDlastmod_time(timestamp *ret, str filename) {
	struct stat st;
	*(lng*) ret = lng_nil;
	if (stat(filename, &st) == 0) {
		lng msecs = 1000*st.st_mtime;
		int year = 1970, one = 1, zero = 0;
		timestamp ts;
        	daytime dt;
		date d;
		tzone tz;
        	return date_create(&d, &year, &one, &one) &&
             	       daytime_create(&dt, &zero, &zero, &zero, &zero) &&
