	for (t=0; t<ntabs; t++) {
	    for (c=0; c<ncols; c++) {
		if (is_fake_project(b[t][c])) {
			bs[t][c] = (bte)0;
		} else {
			bs[t][c] = (bte)1;
		}
		cur[t][c] = BUNfirst(b[t][c]);
	    }
