%	\begin {Body} [<pos>] {<width>} {<floattype>}
%	\end {Body}
\newenvironment {Body} [3] [t] {\hfill\begin{minipage}[#1]{#2}\def\@captype{#3}} {\end{minipage}\hfill}

%	\body [<pos>] {<width>} {<BodyOfFLoat>} {<floattype>}
\newcommand {\body} [4] [t] {\begin{Body}[#1]{#2}{#4}#3\end{Body}}

%	\begin {Figure} [<pos>] {<width>}
%	\end {Figure}
\newenvironment {Figure} [2] [t] {\begin{Body}[#1]{#2}{figure}} {\end{Body}}

%	\Fig [<pos>] {<width>} {<BodyOfFigure>}
\newcommand {\Fig} [3] [t] {\body[#1]{#2}{#3}{figure}}	% same as {\begin{Figure}[#1]{#2}#3\end{Figure}}

%	\begin {Table} [<pos>]{<width>}
%	\end {Table}
\newenvironment {Table} [2] [t] {\begin{Body}[#1]{#2}{table}} {\end{Body}}

%	\Tab [<pos>] {<width>} {<BodyOfTable}
\newcommand {\Tab} [3] [t] {\body[#1]{#2}{#3}{table}}	% same as {\begin{Table}[#1]{#2}#3\end{Table}}

%	\Caption [<pos>] {<width>} {<optionalText>} {<TextOfCaption>} {<floattype>}
\newcommand {\Caption} [5] [t] {\body[#1]{#2}{\caption[#3]{#4}}{#5}}

%	\FigCaption [<pos>] {<width>} {<optionalText>} {<TextOfCaption>}
\newcommand {\FigCaption} [4] [t] {\Caption[#1]{#2}{#3}{#4}{figure}}	% same as {\Fig[#1]{#2}{\caption[#3]{#4}}}

%	\TabCaption [<pos>] {<width>} {<optionalText>} {<TextOfCaption>}
\newcommand {\TabCaption} [4] [t] {\Caption[#1]{#2}{#3}{#4}{table}}	% same as {\Tab[#1]{#2}{\caption[#3]{#4}}}
