  i:=0;             
  barrier go:=true; 	
    # remove from disk
    a:bat[:void,:dbl] := bbp.bind("P_bat");
    bat.setPersistent(a,false);
    transaction.commit();
    
    # alter the values
    a := batcalc.+(a,1.0LL);
    
    # store it to disk with the same name
    bat.setName(a, "P_bat");
    bat.setPersistent(a,true);
    transaction.commit();
