	int i;
#ifdef DEBUG_MAL_LINKER
	stream_printf(GDKout,"load:%s:preloaded?\n",nme);
#endif
	for(i=0;preloaded[i];i++) 
	if( strcmp(preloaded[i],nme)==0) return 1;
	return 0;
}
