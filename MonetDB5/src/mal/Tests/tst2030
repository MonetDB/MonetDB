#The 2000 serie  is focussed on parallelism

function clkticks(n:int):void;
barrier	b:= n>0;
	printf("clock tick %d\n",n);
	alarm.sleep(5);
	n:= n-1;
	redo b;
exit	b;
end clkticks;

thread 	hdl;	# synchronize through a boolean
	clkticks(2);
exit	hdl;
printf("Main thread\n");
printf("Wait for child to exit\n");
