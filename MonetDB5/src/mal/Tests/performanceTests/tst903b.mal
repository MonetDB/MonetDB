# the join experiment
function tst(r:bat, s:bat, rnme:str, snme:str):void;
	t0:= alarm.usec();
	c:= join(r,s);
	t1:= alarm.usec();
	d0:= t1-t0;
	printf("join %s",rnme);
	printf(" %s",snme);
	printf(" %d",d0);
	cnt:= count(c);
	printf(" count %d\n",cnt);
end tst;
function tstmergejoin(r:bat, s:bat, rnme:str, snme:str):void;
	t0:= alarm.usec();
	c:= mergejoin(r,s);
	t1:= alarm.usec();
	d0:= t1-t0;
	printf("mergejoin %s",rnme);
	printf(" %s",snme);
	printf(" %d",d0);
	cnt:= count(c);
	printf(" count %d\n",cnt);
end tstmergejoin;

