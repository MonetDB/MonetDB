factory view1(l:int,h:int):bat[:oid,:str];
a:bat[:oid,:int] := bbp.find("emp","age");
b:bat[:oid,:str] := bbp.find("emp","name");
barrier always:= true;
	lOld:= l;
	hOld:= h;
	io.print("recalc");
	c := algebra.select(a,l,h);
	d := algebra.semijoin(b,c);
	barrier available:=true;
		yield d;
		leave available:= lOld != l;
		leave available:= hOld != h;
		io.print("reuse");
		redo available:=true;
	exit available;
	redo always;
exit always;
end view1;

