function qry(low:int, hgh:int);
    b:= user.bind("schema","table","column",0);
    s1:= algebra.select(b,low,hgh,false,false);
    v:= low + hgh;
    v1:= v/2;
    v2:= calc.int(v1);
    l2:= low +2;
    h2:= hgh -2;
    s2:= algebra.select(b,v2);
    s3:= algebra.select(b,l2,h2);
    s4:= algebra.select(b,l2,hgh,true,false);
    io.print(s1);
    io.print(s2);
    io.print(s3);
    io.print(s4);
end qry;


