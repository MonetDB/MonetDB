# analyse the overhead of chopping a table
# the multiplex code blocks.

function choptest(b:bat[:void,:lng], size:lng, base:lng);
    t0:= alarm.usec();
    barrier (chk,c):= chop.newIterator(b,size);
        t:= algebra.select(c, 256000:lng,266000:lng);
        redo (chk,c):= chop.hasMoreElements(b,size);
    exit (chk,c);
    t1:= alarm.usec();
    d0:= t1-t0;
    io.printf("#chopped at %d",size);
    io.printf(" %d",d0);
    d0:= d0-base;
    io.printf(" %d ",d0);
    i:= 1000000:lng/size;
    if:= calc.flt(i);
    df:= calc.flt(d0);
    f:= df/if;
    io.printf(" at %f usec\n",f);
end choptest;

