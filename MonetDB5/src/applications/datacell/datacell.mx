DCnucleus(int *ret, str *name)
{
	DCpump p;

	(void) ret;

	if (DClocatePump(*name))
		return throwMessage("datacell.nucleus", "pump defined twice");
	p = DCnewPump();
	p->kind = NUCLEUS;
	p->name = GDKstrdup(*name);
	return MAL_SUCCEED;
}

str
DCreceptor(int *ret, str *name, str *host, int *port)
{
