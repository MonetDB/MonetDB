str mapid(str n){
	int i;
	for(i=0; idmap[i].v4name; i++)
	if(strcmp(n,idmap[i].v4name)==0){
		idmap[i].used++;
		return GDKstrdup(idmap[i].v5name);
	}
	return n;
}
int ismapped(str n){
	int i;
	for(i=0; idmap[i].v4name; i++)
	if(strcmp(n,idmap[i].v5name)==0){
		return 1;
	}
	return 0;
}
void showmappings(){
	int i;
	for(i=0; idmap[i].v4name; i++)
	if( idmap[i].used)
	fprintf(stdout,"#Identifer '%s' mapped to '%s'\n", 
		idmap[i].v4name, idmap[i].v5name);
}
