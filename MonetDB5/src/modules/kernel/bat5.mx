	if(bn==NULL )
		BBPreleaseref(b->batCacheid);
	else
		BBPreleaseref(bn->batCacheid);
	if(bn && bn->batCacheid != b->batCacheid)
		throw(MAL, "bat.delete_all", "GDKerror, different BAT returned");
	return MAL_SUCCEED;
}

