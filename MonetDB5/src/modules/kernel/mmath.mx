@= roundM5
mal_export str MATHbinary_ROUND@1(@1 *res, @1 *x, int *y);
str MATHbinary_ROUND@1(@1 *res, @1 *x, int *y) {
  if(*x == @1_nil || *y == int_nil) {
    *res = @1_nil;
  } else {
    dbl factor = pow(10,*y), integral;
    dbl tmp = *y>0?modf(*x,&integral):*x;

    tmp *= factor;
    if(tmp>=0)
      tmp = floor(tmp+0.5);
    else
      tmp = ceil(tmp-0.5);
    tmp /= factor;

    if(*y>0)
      tmp += integral;

    *res = (@1) tmp;
  }

  return MAL_SUCCEED;
}
