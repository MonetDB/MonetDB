@= unopbaseM5
mal_export str MATHunary@1@3(@3 *res , @3 *a );
str MATHunary@1@3(@3 *res , @3 *a ) {
#ifdef DEBUG
        printf( "MATHunary@1@3\n");
#endif
   dbl tmp1,tmp2;
   if (*a == @3_nil) {
        *res = @3_nil;
   } else {
        tmp1= *a;
        @2_unary( &tmp1, &tmp2 );
        *res = (@3) tmp2;
   }
   return MAL_SUCCEED;
}

