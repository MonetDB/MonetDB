str
XMLcomment(xml *x, str *s){
	int len;
	str buf = (str) GDKmalloc(len= strlen(*s)+strlen("<!-- -->"));
	snprintf(buf,len,"<!-- %s -->",*s);
	*x= buf;
	return MAL_SUCCEED;
}

