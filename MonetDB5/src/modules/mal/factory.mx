str
FCTshutdown(int *ret, str *mod, str *fcn)
{
	Symbol s;

	(void) ret;
	s = findMALSymbol(putName(*mod, strlen(*mod)), putName(*fcn, strlen(*fcn)));
	if (s == NULL)
		return throwMessage("factory.shutdown", "Factory not found");
	shutdownFactory(s->def);
	return MAL_SUCCEED;
}

