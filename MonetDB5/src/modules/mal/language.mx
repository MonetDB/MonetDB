@+ Printing
The print commands are implemented as single instruction rules,
because they need access to the calling context.
At a later stage we can look into the issues related to
parsing the format string as part of the initialization phase.
The old method in V4 essentially causes a lot of overhead
because you have to prepare for the worst (e.g. mismatch format
identifier and argument value)
@{
@- Input redirectionrs
@c
str
CMDcallString(MalBlkPtr mb, MalStkPtr stk, InstrPtr pci)
{
	str *s;

	(void) mb;		/* fool compiler */
	s = (str *) getArgReference(stk, pci, 1);
	if (strlen(*s) == 0)
		return MAL_SUCCEED;
	callString(getClient(), *s, FALSE);
	return MAL_SUCCEED;
}

str 
CMDregisterFunction(int *ret, str *m, str *f, str *code, str *help){
	Client c;
	Symbol sym= NULL;
	MalBlkPtr mb;
/*
	InstrPtr sig;
*/
	str msg;
	(void) m; (void) f;

	c= getClient();
	msg= compileString(&sym, c,*code);
	if( sym) {
		stream_printf(GDKout,"REGISTER FUNCTIOn %s.%s\n",
			moduleId(sym->def->stmt[0]), functionId(sym->def->stmt[0]));
		mb= sym->def;
		if( help)
			mb->help= GDKstrdup(*help);
		printFunction(c->fdout, mb,0);
/*
		sig= getSignature(sym);
		renameFunction( moduleId(sig), functionId(sig), 
			putName(*m, strlen(*m)), putName(*f,strlen(*f)));
*/
	}
	*ret = 0;
	return msg;
}
str
CMDevalFile(int *ret, str *fnme)
{
	str s = *fnme;
	Client c = getClient();
	char buffer[1024];

	(void) ret;		/* fool compiler */
	if (s == 0) {
		return throwMessage("mal.setCwd", "File name missing\n");
	}
	if (strlen(s) + strlen(c->cwd) + 2 >= 1024) {
		return throwMessage("mal.setCwd", "Evaluation buffer too small\n");
	}
	buffer[0] = 0;

	if (*s != '/') {
		strcpy(buffer, c->cwd);
		strcat(buffer, "/");
	}
	strcat(buffer, s);
	malInclude(getClient(), buffer, 0, FALSE);

	return MAL_SUCCEED;
}
