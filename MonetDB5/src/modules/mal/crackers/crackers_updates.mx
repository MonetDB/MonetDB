		if (lowNode == NULL && hghNode != NULL){
			hgh    = idxFirst + hghNode->position;
       		        hghVal = (@1 *)Tloc(c, hgh);
        	        hghPos = (oid*)Hloc(c, hgh);
	
           	        deletesForCurrentPiece = 0;
	                while( (@2_LT(delt,hghVal,@3@1) || (@2_EQ(delt,hghVal,@3@1) && hghNode->inclusive == FALSE)) &&
