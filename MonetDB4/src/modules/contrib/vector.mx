#ifndef HAVE_MRAND48
long int
mrand48(void)
{
	/* for now we assume that RAND_MAX == 0x7FFF */
	return (rand() << 8) | (rand() << 1) | (rand() & 1);
}
#endif

#ifndef HAVE_DRAND48
double
drand48(void)
{
	return (double) mrand48() / 2147483648.0;
}
