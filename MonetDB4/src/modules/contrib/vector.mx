        for(i = 0; i < vec->dimension; i++) {
            sum += ((@2)vec->data[i] * (@2)vec->data[i]);
        }

        for(i = 0; i < vec->dimension; i++) {
            (*res)->data[i] = (@2)((dbl)vec->data[i] / sqrt((dbl)sum));
        }

        return(GDK_SUCCEED);
