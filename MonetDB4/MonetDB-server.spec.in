%{_libdir}/MonetDB4/*.mil

%attr(770,monetdb,monetdb) %dir %{_localstatedir}/MonetDB
%attr(770,monetdb,monetdb) %dir %{_localstatedir}/MonetDB4

%config(noreplace) %{_sysconfdir}/MonetDB.conf

%files devel
