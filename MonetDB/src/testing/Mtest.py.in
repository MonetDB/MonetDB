def CheckPort(host,port) :
    busy = 0
    Serrno = 0
    Serrstr = ""
    S = socket.socket(socket.AF_INET, socket.SOCK_STREAM)
    try:
        S.bind((host,port))
    except socket.error, (Serrno,Serrstr):
        busy = 1
    S.close()
    return busy, Serrno, Serrstr
