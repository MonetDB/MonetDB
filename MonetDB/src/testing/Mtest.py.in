def MonetDBVersion():
    try:
        cmd = CheckExec("monetdb-config")
        pOut,pIn = popen2.popen2(cmd+' --version')
        pIn.close()
        res = pOut.readlines()[0]
        res = res.strip();
        pOut.close()
        (x,y,z) = res.split('.',2)
        return ((int(x)*100) + int(y)) * 100 + int(z);
    except:
        pass
    return 0

