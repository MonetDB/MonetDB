def ReadMapproveRc(f) :
    v = {}
    v['OS'] = OS
    v['RELEASE'] = RELEASE
    v['BITS'] = ''
    v['OIDS'] = ''
    v['FIVE'] = ''
    v['STATIC'] = ''
    if os.path.isfile(f):
        r = re.compile('^([A-Z]+) = "(.*)".*$')
        for l in fileinput.input(f):
            m = r.match(l)
            if m:
                v[m.group(1)] = m.group(2)
    return v
