def mapi_ping(port) :
    retry = 0
    wait = 1
    host = 'localhost'
    while retry < 3:
        retry += 1
        try:
            sock = socket.socket(socket.AF_INET, socket.SOCK_STREAM)
            sock.connect((host, port))
            r = sock.makefile('r').readline();
            sock.makefile('w').write("ping\n");
            return True
        except socket.error, (Serrno,Serrstr):
            pass
        time.sleep(wait)
    return False
