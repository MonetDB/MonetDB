@f type_arg
@a Niels Nes

@h
#ifndef _TYPEARG_H_
#define _TYPEARG_H_

#include "symbol.h"
#include "list.h"

enum type_arg_types_t {
	TYPE_BIT,
	TYPE_CHR,
	TYPE_SHT,
	TYPE_INT,
	TYPE_PTR,
	TYPE_OID,
	TYPE_FLT,
	TYPE_DBL,
	TYPE_LNG,
	TYPE_STR
};

class Arg : public Symbol {
    public:
	Arg( int t, char *n, char *v=NULL ) : Symbol(t,n){ _value = v; }
	virtual int type() const { return 0; }
	virtual int isFixed() const { return 1; }
	char *value() const { return _value; };
    private:
	char *_value;
};

class TypeArg : public Arg {
    public:
	TypeArg( int t, char *n, int type, char *v=NULL ); 

	virtual char *toString() const;
	static ostream &gen_type( ostream &o, int t );
	int type() const;
	int isFixed() const;

	virtual ostream &print( language *l, ostream &o ) const ;
    private:
	int _type;
};
#endif // _TYPEARG_H_

@C
#include "type_arg.h"
#include "language.h"
#include <string.h>


TypeArg::TypeArg( int t, char *n, int type, char *v ) : Arg(t,n,v) {
	_type = type;
}

char *TypeArg::toString( ) const {
   	switch (_type){
	case TYPE_BIT: return "bit"; 
	case TYPE_CHR: return "chr"; 
	case TYPE_SHT: return "sht";
	case TYPE_INT: return "int";
	case TYPE_PTR: return "ptr";
	case TYPE_OID: return "oid";
	case TYPE_FLT: return "flt";
	case TYPE_DBL: return "dbl";
	case TYPE_LNG: return "lng";
	case TYPE_STR: return "str";
	}
	return "void";
}

int TypeArg::type() const {
	return _type;
}

int TypeArg::isFixed() const {
	if (_type == TYPE_STR)
		return 0;
	return 1;
}

ostream &TypeArg::gen_type( ostream &o, int t ){
   	switch (t){
	case TYPE_BIT: o << "bit"; break;
	case TYPE_CHR: o << "chr"; break;
	case TYPE_SHT: o << "sht"; break;
	case TYPE_INT: o << "int"; break;
	case TYPE_PTR: o << "ptr"; break;
	case TYPE_OID: o << "oid"; break;
	case TYPE_FLT: o << "flt"; break;
	case TYPE_DBL: o << "dbl"; break;
	case TYPE_LNG: o << "lng"; break;
	case TYPE_STR: o << "str"; break; 
	default: o << "void"; 
	}
	return o;
}

ostream &TypeArg::print( language *l, ostream &o ) const {
	return l->gen_type_arg( o, *this );
}
