        if (next && h.link[i+1] == i) {\
                h.link[i+1] = j;\
        } else {\
		size_t _c = HASHprobe(&h, v); \
		if (h.hash[_c] == i) {\
			h.hash[_c] = j; \
		} else\
		for(_c = h.hash[_c]; _c; _c = h.link[_c]) {\
			if (h.link[_c] == i) {\
				h.link[_c] = j; \
				break;\
			}\
		}\
	} h.link[j] = h.link[i];\
}
