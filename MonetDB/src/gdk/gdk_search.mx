#define HASHdel(h, i, v, next) {\
        if (next && h.link[i+1] == i) {\
                h.link[i+1] = h.link[i];\
        } else {\
		size_t _c = HASHprobe(&h, v);\
		if (h.hash[_c] == i) {\
			h.hash[_c] = h.link[i]; \
		} else\
		for(_c = h.hash[_c]; _c; _c = h.link[_c]) {\
			if (h.link[_c] == i) {\
				h.link[_c] = h.link[i]; \
				break;\
			}\
		}\
	} h.link[i] = 0;\
}

