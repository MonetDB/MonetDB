@- 
Insertion is straight forward, 
The intermediate tree should be built around the hloc directly. This
can speed-up processing significantly.

@= idxins
{	Tnode *t = b->hidx.root; 
	Tnode *f = b->hidx.free; 
	
	b->hidx.free++; 
	f->v = @4;

	for (;;) {
		if (t == NULL) {	
       			b->hidx.root = f; 
			break;
		}
		if (@1_LT(BUNh@3(b,@4), BUNh@3(b,t->v), @2)) {
			if (t->l == NULL) { 
				t->l = f;
		       		break;
			}
			t = t->l; 
		} else {
			if (t->r == NULL) {
				t->r = f;
				break;
			}
			t = t->r; 
		}
       	}
} 
