				break;
			}
			cur += 128;
		}
	}
	/* sorted? */
	while (cur + 128 < end) {
		if (!chk_order@2_@1((@1 *) BUNhloc(bi,cur)))
			break;
		cur += 128;
	}
	/* finish remaining <128 tuples */
	if (cur < end) {
		@1 val, prv = *(@1*)BUNhloc(bi,cur);
		cur++;
		if (b->hkey == 0 && key) {
			/* sorted and key? */
			while (cur < end) {
				val = *(@1*)BUNhloc(bi,cur);
				if (prv @3= val) {
					key = FALSE;
					break;
				}
				prv = val;
				cur++;
			}
		}
		/* sorted? */
		while (cur < end) {
			val = *(@1*)BUNhloc(bi,cur);
			if (prv @3 val) {
				/* record negative position info */
				b->H->nosorted@2 = cur;
				return FALSE;
			}
			prv = val;
			cur++;
		}
	}

@= sort_key_tpe
static int
chk_order@1@3_@4(@4*__r col)
{
	int i, r = 1;

	for (i = 0; i < 128; i += 4) {
		r &= (col[i + 1] @2 col[i + 0]) &
		     (col[i + 2] @2 col[i + 1]) &
		     (col[i + 3] @2 col[i + 2]) &
		     (col[i + 4] @2 col[i + 3]);
	}
	return r;
}

