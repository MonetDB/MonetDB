			HASHloop@2(bni, bn->H->hash, r, v)
				goto found@3@2;
			if (BUNins(bn, v, &yy, FALSE) == NULL)
				goto bunins_failed;
			r = BUNlast(bn) - 1;
found@3@2:		(* (int *) BUNtloc(bni, r))++;
		}
		HASHdestroy(bn);
	} else if (BATcount(b)) {
		ptr prev = (ptr) BUNt@1(bi, BUNfirst(b));

		BATloop(b, p, q) {
			ptr v = (ptr) BUNt@1(bi, p);

			if (@3_CMP(v, prev, @4) == 0) {
				yy++;
			} else {
