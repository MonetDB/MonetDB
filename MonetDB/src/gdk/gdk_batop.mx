@c
static BAT *
BAT_hashselect(BAT *b, BAT *bn, ptr tl)
{
	int ht = bn->htype, tt = bn->ttype;
	size_t size = BATcount(bn);
	hash_t i;

	BATcheck(b, "BAT_hashselect");
	b = BATmirror(b);
	if (BATprepareHash(b)) {
	      bunins_failed:
		BBPreclaim(bn);
		return NULL;
	}
	while (bn) {
		BUN q = BUNfirst(bn);
		BUN r = BATcapacity(bn);
		BATiter bi = bat_iterator(b);
		size_t hs = Hsize(b);
		size_t ts = Tsize(b);

		if (b->tvarsized) {
			@:hashselect(var)@
		} else {
			@:hashselect(loc)@
		}
		if (q <= r)
			break;
		size = (q - BUNfirst(bn));

		BBPreclaim(bn);
		bn = BATnew(ht, tt, size);
	}
	return bn;
}

