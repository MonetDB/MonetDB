str CMDaccpresent(int *ret, int *bid) {
	BAT *b;
	@:getBATdescriptor(ret,bid,b,CMDaccpresent)@
	*ret = 0;
	if (b->hacctype) {
	    int (*check)() = BATaccelerators[b->hacctype].accRepair;
	    if (check == NULL || (*check)(&b->haccelerator,b) == GDK_SUCCEED) {
		*ret = b->hacctype;
 	    }
	}
	return MAL_SUCCEED;
}

