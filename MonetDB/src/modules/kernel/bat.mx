@* Implementation Code
In Version 5, we are not going to support recursive BATs.
It is up to the programmer to translate a bat into a
bat-name or batCacheid

@= batconvert
	(BAT@2type(@1) == TYPE_bat)?&((BAT*)@2)->batCacheid:@2

@+ Information Functions
In most cases we pass a BAT identifier, which should be unified
with a BAT descriptor. Upon failure we can simply abort the function.

@= getBATdescriptor
	if( BBPcheck(*@2,"@4")==0) 
                return throwMessage("@4:cannot access bat @2 in bbp");
	@3= (BAT*) BBPgetdesc(*@2);
	if( @3 == NULL) { *@1 = 0;
                return throwMessage("@4:cannot access descriptor @2");
	}
	if(*@2 <0) @3 = BATmirror(@3);
@= getBATdescriptor2
	if( BBPcheck(*@2,"@4")== 0 ) 
                return throwMessage("@4:cannot access bat @2 in bbp");
	@3= (BAT*) BBPgetdesc(*@2);
	if( @3 == NULL) { *@1 = 0;
                return throwMessage("@4:cannot access descriptor @2");
	}
	if(*@2 <0) @3 = BATmirror(@3);
@-
At this stage of the game, we should translate
the arguments of BATnew into types.
@c
#include "monet.h"

str CMDnewBat(int *res, int *ht, int *tt){
	BAT *b;

	if( *ht<0 || *ht >= GDKatomcnt ||
	    *tt<0 || *tt >= GDKatomcnt){
		return throwMessage("CMDnewBat:type values out of range");
	}
	b = BATnew(*ht,*tt,0);
	if( b){
		*res= b->batCacheid;
		return MAL_SUCCEED;
	}
	return  throwMessage("CMDnewBat:GDKerror");
}
str CMDnewBat2(int *res, int *ht, int *tt, int *cap){
	BAT *b;

	if( *ht<0 || *ht >= GDKatomcnt ||
	    *tt<0 || *tt >= GDKatomcnt){
		return throwMessage("CMDnewBat:type values out of range");
	}
	b = BATnew(*ht,*tt,*cap);
	if( b){
		*res= b->batCacheid;
		return MAL_SUCCEED;
	}
	return  throwMessage("CMDnewBat2:GDKerror");
}

str CMDreverse(int *ret, int *bid){
	BAT *b;
	@:getBATdescriptor(ret,bid,b,CMDreverse)@
	*ret= -b->batCacheid;
	BBPfix(b->batCacheid);
	return MAL_SUCCEED;
} 

str CMDmirror(int *ret, int *bid){
	BAT *b, *v;
	@:getBATdescriptor(ret,bid,b,CMDmirror)@
	v = VIEWcombine(b);
	if (b->batRestricted == BAT_WRITE) {
		BAT *bc = BATrcopy(v);
		BBPreclaim(v);
		v = bc;
	}
	if(v) {
		BBPfix(b->batCacheid);
		*ret = v->batCacheid;
		return MAL_SUCCEED;
	}
	*ret = 0;
	return throwMessage("CMDmirror:GDKerror");
}

str CMDconvert(int *ret, int *bid){
	BAT *b;
	@:getBATdescriptor(ret,bid,b,CMDconvert)@
	BATconvert(b,CONV_HTON);
	BBPfix(b->batCacheid);
	*ret = b->batCacheid;
	return MAL_SUCCEED;
}

str CMDrevert(int *ret, int *bid){
	BAT *b;
	@:getBATdescriptor(ret,bid,b,CMDrevert)@
	BATrevert(b);
	BBPfix(b->batCacheid);
	*ret = b->batCacheid;
	return MAL_SUCCEED;
}

str CMDorder(int *ret, int *bid){
	BAT *b;
	@:getBATdescriptor(ret,bid,b,CMDorder)@
	BATorder(b);
	BBPfix(b->batCacheid);
	*ret = b->batCacheid;
	return MAL_SUCCEED;
}
@-
Insertions into the BAT may involve void types (=no storage required)
These cases should actually be captured during BUNins, because they
may emerge internally as well.
@= void_insertbun
if (b->@1type == TYPE_void && *(oid*) @1 != oid_nil &&
    *(oid*) @1 != (b->@1seqbase + BUNgetpos(b, BUNlast(b))))
{
      return throwMessage("CMDinsert: insert non-nil values in a void column.");
}
@c
str CMDinsert_bun(int *r, int *bid, ptr h, ptr t) {
	BAT *b;
	@:getBATdescriptor2(r,bid,b,CMDinsert_bun)@
	@:void_insertbun(h)@
	@:void_insertbun(t)@
	@:derefStr(b,h,h)@
	@:derefStr(b,t,t)@
	BUNins(b, @:batconvert(b,h)@, @:batconvert(b,t)@); 
	BBPfix(b->batCacheid);
	*r = b->batCacheid;
	return MAL_SUCCEED;
} 

str CMDinsert_bat(int *r, int *bid, int *sid){
	BAT *b, *s;
	@:getBATdescriptor2(r,bid,b,CMDinsert_bat)@
	@:getBATdescriptor2(r,sid,s,CMDinsert_bat)@
	BATins(b,s);
	BBPfix(b->batCacheid);
	*r = b->batCacheid;
	return MAL_SUCCEED;
} 

@= void_append_only
	if ((b->hseqbase != oid_nil && b->htype == TYPE_void) ||
	    (b->tseqbase != oid_nil && b->ttype == TYPE_void))
	{
		return throwException("@1: %s[%s,%s] is append-only.", 
			BBPname(b->batCacheid), 
			ATOMname(b->htype), ATOMname(b->ttype));
	}
@c
str CMDreplace_bun(int *r, int *bid, ptr h, ptr t) {
	BAT *b;
	@:getBATdescriptor2(r,bid,b,CMDreplace_bat)@
	@:derefStr(b,h,h)@
	@:derefStr(b,t,t)@
	@:void_append_only(CMDreplace_bun)@
	BUNreplace(b, @:batconvert(b,h)@, @:batconvert(b,t)@);
	BBPfix(b->batCacheid);
	*r = b->batCacheid;
	return MAL_SUCCEED;
} 

str CMDreplace_bat(int *r, int *bid, int *sid){
	BAT *b,*s;
	@:getBATdescriptor2(r,bid,b,CMDreplace_bat)@
	@:getBATdescriptor2(r,sid,s,CMDreplace_bat)@
	@:void_append_only(CMDreplace_bat)@
	BATreplace(b,s);
	BBPfix(b->batCacheid);
	*r = b->batCacheid;
	return MAL_SUCCEED;
} 

str CMDdestroy_bat(int *r, int *bid) {
	BAT *b;
	@:getBATdescriptor2(r,bid,b,CMDdelete_bun)@
	BATpropcheck(b);
	BATpropcheck(BATmirror(b));
	BATmode(b, TRANSIENT);
	*r = TRUE;
	return MAL_SUCCEED;
} 
str CMDdelete_bun(int *r, int *bid, ptr h, ptr t) {
	BAT *b;
	@:getBATdescriptor2(r,bid,b,CMDdelete_bun)@
	@:derefStr(b,h,h)@
	@:derefStr(b,t,t)@
	@:void_append_only(CMDdelete_bun)@
	BUNdel(b,h,t);
	BBPfix(b->batCacheid);
	*r = b->batCacheid;
	return MAL_SUCCEED;
} 

str CMDdelete_head(int *r, int *bid, ptr h) {
	BAT *b;
	@:getBATdescriptor2(r,bid,b,CMDdelete_head)@
	@:derefStr(b,h,h)@
	@:void_append_only(CMDdelete_head)@
	BUNdelHead(b, @:batconvert(b,h)@);
	BBPfix(b->batCacheid);
	*r = b->batCacheid;
	return MAL_SUCCEED;
} 

str CMDdelete_all(int *r, int *bid) {
	BAT *b;
	@:getBATdescriptor2(r,bid,b,CMDdelete_all)@
	BATclear(b);
	BBPfix(b->batCacheid);
	*r = b->batCacheid;
	return MAL_SUCCEED;
