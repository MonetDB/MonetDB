/* COMMAND "getDirectory": Extract the directory names from the URL
 * SIGNATURE: getDirectory(str) : bat[int,str]; */
int
url_getDirectory(BAT **retval,	/* put pointer to BAT[int,str] record here. */
		 url t)
{
	static char buf[1024];
	char *s;
	int i = 0, k = 0;
	BAT *b = NULL;

	if (t == 0)
		return GDK_FAIL;

	while (*t && *t != ':')
		t++;
	t++;
	if (*t != '/')
		goto getDir_done;
	t++;
	if (*t != '/')
		goto getDir_done;
	t++;
	while (*t && *t != '/')
		t++;
	b = BATnew(TYPE_int, TYPE_str, 40);
	if (b == 0)
		return GDK_FAIL;

	s = buf;
	for (t++; *t; t++) {
		if (*t == '/') {
			*s = 0;
			BUNins(b, &k, buf);
			k++;
			s = buf;
			*s = 0;
			i = 0;
			continue;
		}
		*s++ = *t;
		if (i++ == 1023) {
			GDKwarning("url_getDirectory:server name too long\n");
			break;
		}
	}
      getDir_done:
	@:Pseudo(dir,name)@
	return GDK_SUCCEED;
}

/* COMMAND "getDomain": Extract the Internet domain from the URL
 * SIGNATURE: getDomain(str) : str; */
int
url_getDomain(str *retval,	/* put string: pointer to char here. */
	      url t)
{
	static char buf[1024];
	char *b, *d, *s = buf;
	int i = 0;

	*retval = 0;
	s = str_nil;
	if (t == 0)
		return GDK_FAIL;
	while (*t && *t != ':')
		t++;
	t++;
	if (*t != '/')
		goto getDomain_done;
	t++;
	if (*t != '/')
		goto getDomain_done;
	t++;
	b = buf;
	d = 0;
	for (; *t && *t != '/'; t++) {
		if (*t == '.')
			d = b;
		if (*t == ':')
			break;
		*b++ = *t;
		if (i++ == 1023) {
			GDKwarning("url_getDomain:server name too long\n");
			break;
		}
	}
	*b = 0;
	if (d)
		s = d + 1;
      getDomain_done:
	d = GDKmalloc(strlen(s) + 1);
	if (d)
		strcpy(d, s);
	*retval = d;
	return GDK_SUCCEED;
}

