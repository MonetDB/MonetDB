char
x2c(char *what)
{
	char digit;

	digit = (what[0] >= 'A' ? ((what[0] & 0xdf) - 'A') + 10 : (what[0] - '0'));
	digit *= 16;
	digit += (what[1] >= 'A' ? ((what[1] & 0xdf) - 'A') + 10 : (what[1] - '0'));
	return (digit);
}

char *
escape_url(char *url)
{
	int x, y;
	char *res;

	if (!url)
		return NULL;

	res = (char *) malloc(200);
	for (x = 0, y = 0; url[x]; ++x, ++y) {
		sprintf(&res[y], "%%%2x", url[x]);

		y += 2;
	}
	res[y] = '\0';
	return res;
}

void
unescape_url(char *url)
{
	int x, y;

	for (x = 0, y = 0; url[y]; ++x, ++y) {
		if ((url[x] = url[y]) == '%') {
			url[x] = x2c(&url[y + 1]);

			y += 2;
		}
	}
	url[x] = '\0';
}

void
plustospace(char *str)
{
	int x;

	for (x = 0; str[x]; x++)
		if (str[x] == '+')
			str[x] = ' ';
}

