/* COMMAND "getContext": Extract the path context from the URL
 * SIGNATURE: getContext(str) : str; */
int
url_getContext(str *retval, url Str1)
{
	char *s, *d;

	if (Str1 == 0)
		return GDK_FAIL;

    s = strstr(Str1, "://");
    if (s)
        s +=3;
    else
        s = Str1;

	s = strchr(s, '/');
	if (s == 0) {
		d = GDKmalloc(strlen(str_nil) + 1);
