# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

[*.{c,h}]
indent_style = tab
tab_width = 4
indent_size = tab
trim_trailing_whitespace = true
charset = utf-8
max_line_length = 120

[*.py]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
charset = utf-8

[gdk/*.{c,h}]
tab_width = 8
max_line_length = 72
