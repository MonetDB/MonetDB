# per row aggregation

## points-points 
query T rowsort
SELECT
    ST_COLLECT(p1, p2) AS points
FROM (
    VALUES
        (
            ST_GeomFromText('POINT(1 2)'),
            ST_GeomFromText('POINT(3 4)')
        ),
        (
            ST_GeomFromText('POINT(10 20)'),
            ST_GeomFromText('POINT(30 40)')
        )
) AS REL(p1, p2)
----
MULTIPOINT (1 2, 3 4)
MULTIPOINT (10 20, 30 40)

