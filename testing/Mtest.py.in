def CheckTests(env, TST, oktests):
    missing = []
    if not os.path.isfile(TST+'.reqtests'):
        # no required tests, so none missing
        return missing

    for test in open(TST+'.reqtests'):
        test = test.strip()
        if not test or test[:1] == '#':
            continue
        if not test in oktests:
            missing.append(test)
    return missing
