AS_VAR_IF([have_hge], [yes], [
	hge_bits='128'
	hge_digits=' 38'], [
	hge_bits=' 64'
	hge_digits=' 18'])
AS_ECHO([''])
AS_ECHO(["* Important options:"])
AS_ECHO(["    OID size:              ${bits} bits"])
AS_ECHO(["    largest integer type: ${hge_bits} bits"])
AS_ECHO(["    largest decimal type: ${hge_digits} digits"])
AS_ECHO([''])

