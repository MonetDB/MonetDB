buildbase=@QXBUILD@
builddir="${buildbase}/monetdb5"
# make sure srcdir contains absolute path name
srcdir=`cd '@Xsrcdir@'; pwd`
uname=`uname`

# where compiled monetdb5 modules are to be found
MOD_PATH="${builddir}/compiler/.libs:${builddir}/compiler:${builddir}/optimizer/.libs:${builddir}/optimizer:${builddir}/scheduler/.libs:${builddir}/scheduler:${builddir}/modules/atoms/.libs:${builddir}/modules/atoms:${builddir}/modules/kernel/.libs:${builddir}/modules/kernel:${builddir}/modules/mal/.libs:${builddir}/modules/mal"

if [ "${LD_LIBRARY_PATH}" ] ; then
	LD_LIBRARY_PATH=":${LD_LIBRARY_PATH}"
fi
if [ "${uname}" = "Darwin"  -a  "${DYLD_LIBRARY_PATH}" ] ; then
	DYLD_LIBRARY_PATH=":${DYLD_LIBRARY_PATH}"
fi
if [ "${uname}" = "AIX"  -a  "${LIBPATH}" ] ; then
	LIBPATH=":${LIBPATH}"
fi

# enhance various paths to find our stuff
PATH="${builddir}/tools:$PATH"
libpath="${MOD_PATH}:${builddir}/mal/.libs"
LD_LIBRARY_PATH="${libpath}${LD_LIBRARY_PATH}"
if [ "${uname}" = "Darwin" ] ; then
	DYLD_LIBRARY_PATH="${libpath}${DYLD_LIBRARY_PATH}"
	export DYLD_LIBRARY_PATH
fi
if [ "${uname}" = "AIX" ] ; then
	LIBPATH="${libpath}${LIBPATH}"
	export LIBPATH
fi
export PATH LD_LIBRARY_PATH

exec mserver5 --set monet_mod_path="${MOD_PATH}" --dbfarm="${builddir}/dbfarm" ${1+"$@"}
