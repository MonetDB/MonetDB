MTSAFE

SUBDIRS = parser

INCLUDES = ../../mal \
		   ../../optimizer \
		   ../../../common/options \
		   ../../../common/stream \
		   ../../../common/utils \
		   ../../../gdk

lib__json = {
	MODULE
	DIR = libdir/monetdb5
	SOURCES = json.c json.h

	LIBS = ../../tools/libmonetdb5 \
		   ../../../gdk/libbat \
		   ../../../common/stream/libstream \
		   $(MALLOC_LIBS)
}

lib__jaql = {
	MODULE
	DIR = libdir/monetdb5
	SOURCES = jaql.c jaql.h jaqlgencode.c jaqlgencode.h \
			  jaqlscenario.c jaqlscenario.h jaqltree.h

	# the ./ is necessary for autogen not to generate garbage
	# Windows needs the libstream for indirect dep from libbat
	LIBS = ./parser/libjaqlp \
		   ../../tools/libmonetdb5 \
		   ../../../gdk/libbat \
		   ../../../common/stream/libstream \
		   $(MALLOC_LIBS)
}

headers_json_mal = {
	HEADERS = mal
	DIR = libdir/monetdb5
	SOURCES = json.mal
}

headers_jaql_mal = {
	HEADERS = mal
	DIR = libdir/monetdb5
	SOURCES = jaql.mal jaqlfunc.mal
}

headers_autoload = {
	HEADERS = mal
	DIR = libdir/monetdb5/autoload
	SOURCES = 30_jaql.mal
}

EXTRA_DIST = json.mal jaql.mal 30_jaql.mal
EXTRA_DIST_DIR = jaqltests Tests
