@f opt_crack
@a S.Idreos
The cracker optimizer searches patterns to be replaced by
the special cracker index operations.

@{
@mal
pattern optimizer.crack():str
address OPTcrack;
pattern optimizer.crack(mod:str, fcn:str):str
address OPTcrack
comment "Replace algebra select with crackers select";

@h
#ifndef _OPT_CRACK_
#define _OPT_CRACK_
#include "opt_support.h"

#define OPTDEBUGcrack  if ( optDebug & (1 <<DEBUG_OPT_CRACK) )

@c  
#include "monetdb_config.h"
#include "opt_crack.h"
#include "mal_interpreter.h"	/* for showErrors() */
#include "opt_prelude.h"

#define match2(X,M,F) ( (X) && getFunctionId(X) && getFunctionId(X)==F && \
	getModuleId(X) && getModuleId(X)==M)

/* find all algebra select structions in a mal block mb and change them to the corresponding crackers command
    */
static int
OPTcrackImplementation(Client cntxt, MalBlkPtr mb, MalStkPtr stk, InstrPtr pci)
{
	InstrPtr p, *old;
	int i, limit, actions=0;

	(void) cntxt;
	(void) stk; 
	(void) pci;
	
	limit = mb->stop;
	old = mb->stmt;
	
	for (i = 0; i < limit; i++) {
		p = old[i];
		OPTDEBUGcrack{
			mnstr_printf(cntxt->fdout,"#limit is at: %d and i is at: %d  ", limit, i);
	        printInstruction(cntxt->fdout, mb, 0, p, LIST_MAL_ALL);	
		}
		/* find and replace algebra select commands with crack select ones*/

		
		/* add a property "can be cracked" to every base relation that is a candidate for selection cracking */
		if ( match2(p, batRef, newRef) || match2(p, sqlRef, bindRef) ){  

		  	/* crack only supported data types */
			if ( getTailType(mb->var[getArg(p,0)]->type)==TYPE_str )
					continue;

			/* avoid cracking delta bats used for updates */
			if (getModuleId(p)== sqlRef && mb->var[getArg(p,5)]->value.val.ival != 0 ) 
				continue;		
				
			varSetProp(mb, getArg(p, 0), canBeCrackedProp, 0, NULL);
			
			continue;
			
		}

		/* propagate the canBeCracked property */
		if ( match2(p, batRef, setWriteModeRef) || 
			  match2(p, batcalcRef, dblRef) || 
			  match2(p, batcalcRef, intRef) ){ 

			if (varGetProp(mb, getArg(p, 1), canBeCrackedProp) != NULL){
				varSetProp(mb, getArg(p, 0), canBeCrackedProp, 0, NULL);
			}
		
			continue;
		}

		/* make the actual command change by changing the module name */
		if (match2(p, algebraRef, selectRef) ||
		    match2(p, algebraRef, uselectRef) || 
		    match2(p, algebraRef, thetaselectRef) || 
		    match2(p, algebraRef, thetauselectRef)){ 

			if (varGetProp(mb, getArg(p,1), canBeCrackedProp) != NULL){

				setModuleId(p,putName("crackers",8));
				actions++;
			}
			continue;
		}
	}

	return actions;
}

@include ../../optimizer/optimizerWrapper.mx
@h
@:exportOptimizer(crack)@
#endif
@c
#include "opt_statistics.h"
@:wrapOptimizer(crack,OPT_CHECK_ALL)@
@}
