# same reference scheme.

function dir():void;
	d:= bbp.getRefCount();
	dl:=bbp.getLRefCount();
	dn:= bbp.getNames();
	ds:= algebra.sort(dn);
	io.table(ds,d,dl);
end dir;

function createBAT(name:str):bat[:oid,:int];
    res:= bat.new(:oid,:int);
    bat.setName(res,name);
    i:= calc.getBATidentifier(res);
	j:= i; # now res should have 3 lrefs
	z:= bbp.getLRefCount(res);
	io.print(z);
    return res;
end createBAT;

