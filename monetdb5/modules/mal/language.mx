@c
str
CMDsetMemoryTrace(Client cntxt, MalBlkPtr mb, MalStkPtr stk, InstrPtr pci)
{
    bit *flag= (bit*) getArgReference(stk,pci,1);

    (void) mb;
    if( *flag) {
		cntxt->flags |= bigfootFlag;
        MCdefault |= bigfootFlag;
    } else {
		cntxt->flags &= bigfootFlag;
        MCdefault &= ~bigfootFlag;
	}
    return MAL_SUCCEED;
}

