@= Zcode
static inline @2 Zencode_@1_@2(@1 x, @1 y)
{
	@2 v = 0;
	int i,mask=1;
	for ( i = 0; i < (int) (8 * sizeof(@2)/2) ; i++) {
		v |= ((x & 1) * mask);
		x>>=1;
		mask <<= 1;
		v |= ((y & 1) * mask);
		y>>=1;
		mask <<= 1;
	}
	return v;
}

static inline void Zdecode_@1_@2(@1 *x, @1 *y, @2 *z)
{
	@1 xv = 0, yv=0, mask =1;
	@2 zv = *z;
	int i;
	for ( i = 0; i < (int) (8 * sizeof(@2)); i+= 2) {
		xv |= ((zv & 1) * mask);
		zv >>= 1;
		yv |= ((zv & 1) * mask);
		zv >>= 1;
		mask <<=1;
	}
	*x = xv;
	*y = yv;
}
static inline void Zdecode_@1_@2_x(@1 *x, @2 *z)
{
	@1 xv = 0, mask =1;
	@2 zv = *z;
	int i;
	for ( i = 0; i < (int) (8 * sizeof(@2)); i+= 2) {
		xv |= ((zv & 1) * mask);
		zv >>= 2;
		mask <<=1;
	}
	*x = xv;
}
static inline void Zdecode_@1_@2_y(@1 *y, @2 *z)
{
	@1 yv=0, mask =1;
	@2 zv = *z;
	int i;
	for ( i = 0; i < (int) (8 * sizeof(@2)); i+= 2) {
		zv >>= 1;
		yv |= ((zv & 1) * mask);
		zv >>= 1;
		mask <<=1;
	}
	*y = yv;
}
