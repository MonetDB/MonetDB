@= binopbaseM5
str MATHbinary@1@3(@3 *res, @3 *a, @3 *b ) {
#ifdef DEBUG
		printf( "MATHbinary@1\n");
#endif
   if (*a == @3_nil || *b == @3_nil) {
		*res = @3_nil;
   } else {
		dbl r1 ,a1 = *a, b1 = *b;
		@2_binary( &a1, &b1, &r1);
		*res= (@3) r1;
   }
   return MAL_SUCCEED;
}
@= binopM5
  @:binopbaseM5(@1,@2,dbl)@
  @:binopbaseM5(@1,@2,flt)@
@
@= roundM5
str MATHbinary_ROUND@1(@1 *res, @1 *x, int *y) {
  if(*x == @1_nil || *y == int_nil) {
	*res = @1_nil;
  } else {
	dbl factor = pow(10,*y), integral;
	dbl tmp = *y>0?modf(*x,&integral):*x;

	tmp *= factor;
	if(tmp>=0)
	  tmp = floor(tmp+0.5);
	else
	  tmp = ceil(tmp-0.5);
	tmp /= factor;

	if(*y>0)
	  tmp += integral;

	*res = (@1) tmp;
  }
  return MAL_SUCCEED;
}
