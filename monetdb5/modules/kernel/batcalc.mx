@= accumUnary
	{
		@2* p = (@2*)Tloc(b,BUNfirst(b));
		@2 *q = (@2*)Tloc(b,BUNlast(b));
		@2 *o = (@2*)Tloc(bn,BUNfirst(bn));

		BATaccessBegin(b, USE_TAIL, MMAP_SEQUENTIAL);
		if (b->T->nonil)
			for(; p<q; p++, o++)
				*o = @1(*p);
		else
			for(; p<q; p++, o++){
				/* this code is better as x?nil:y  */
				if(*p == @2_nil ) {
					*o = @2_nil;
					bn->T->nonil = 0;
				} else 
					*o = @1(*p);
			}
		BATaccessEnd(b, USE_TAIL, MMAP_SEQUENTIAL);
	}
