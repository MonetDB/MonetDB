		throw(MAL, "group.GRPsize", SEMANTIC_TYPE_ERROR "(v)oid head required\n");

	bn = BATnew(e->htype, TYPE_wrd, BATcount(e));
	if (bn == NULL){
		BBPreleaseref(b->batCacheid);
		BBPreleaseref(e->batCacheid);
		throw(MAL, "group.size", MAL_MALLOC_FAIL);
