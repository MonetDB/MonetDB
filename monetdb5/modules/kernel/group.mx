	BATaccessBegin(b, USE_HEAD|USE_TAIL, MMAP_SEQUENTIAL);
	if (BAThordered(b)&1 && BAThdense(bn))
		BATaccessBegin(bn, USE_TAIL, MMAP_SEQUENTIAL);
	else
		BATaccessBegin(bn, USE_HEAD|USE_HHASH|USE_TAIL, MMAP_WILLNEED);
