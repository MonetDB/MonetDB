{
	lng _t_ = GDKusec();
	BAT *histo = 0, *b, *bn = 0;

	ALGODEBUG THRprintf(GDKout,
		"# GRPgroup ( bid=%d , N=%d , rng=%d )\n",
		*bid, *N, *rng);

	if ((b = BATdescriptor(*bid)) == NULL) {
