DH_VERBOSE=1

%:
	dh $@ --parallel

override_dh_auto_configure:
	dh_auto_configure -- \
	-DPYTHON3_LIBDIR=lib/python3/dist-packages \
	-DCMAKE_INSTALL_RUNSTATEDIR=/run \
	-DRELEASE_VERSION=ON \
	-DASSERT=OFF \
	-DCINTEGRATION=ON \
	-DFITS=ON \
	-DGEOM=ON \
	-DINT128=ON \
	-DNETCDF=OFF \
	-DODBC=ON \
	-DPY3INTEGRATION=ON \
	-DRINTEGRATION=ON \
	-DSANITIZER=OFF \
	-DSHP=OFF \
	-DSTRICT=OFF \
	-DTESTING=ON \
	-DWITH_BZ2=ON \
	-DWITH_CMOCKA=OFF \
	-DWITH_CURL=ON \
	-DWITH_LZ4=ON \
	-DWITH_LZMA=ON \
	-DWITH_PCRE=ON \
	-DWITH_PROJ=OFF \
	-DWITH_READLINE=ON \
	-DWITH_SNAPPY=OFF \
	-DWITH_VALGRIND=OFF \
	-DWITH_XML2=ON \
	-DWITH_ZLIB=ON

# currently the test suite fails
override_dh_auto_test:

override_dh_strip:
	dh_strip --dbg-package=monetdb-dbg
