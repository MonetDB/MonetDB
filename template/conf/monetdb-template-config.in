# minimal inital version as required by Mtest.py

pkg="@PACKAGE@"
source="@QTEMPLATE_SOURCE@"
build="@QTEMPLATE_BUILD@"
prefix="@Qprefix@"
exec_prefix="@Qexec_prefix@"

libdir="@Qlibdir@"
M4libdir="${libdir}/MonetDB4"
M5libdir="${libdir}/MonetDB5"

prog=`basename $0`
usage="Usage: $prog [OPTION]

Known values for OPTION are:

  --build		print ${pkg} build directory
  --source		print ${pkg} source directory
  --modpath4		print default ${pkg} module path (for M4)
  --modpath5		print default ${pkg} module path (for M5)
  --conds		conditionals as set by configure
  --help		display this help and exit
  --version		output version information

Install directories ${pkg} was configured to
  --prefix
"

if test $# -eq 0; then
    echo "$usage" >&2
    exit 1
fi

while test $# -gt 0; do
    case "$1" in
    -*=*) optarg=`echo "$1" | sed 's/[-_a-zA-Z0-9]*=//'` ;;
    *) optarg= ;;
    esac

    case "$1" in

    --prefix)
	echo $prefix
	;;

    --build)
	echo $build
	;;

    --source)
	echo $source
	;;

    --modpath4)
        echo 	$M4libdir:$M4libdir/lib:$M4libdir/bin
        ;;

    --modpath5)
        echo 	$M5libdir:$M5libdir/lib:$M5libdir/bin
        ;;

    --version)
	echo @VERSION@
	exit 0
	;;

    --help)
	echo "$usage"
	exit 0
	;;

    --conds)
	echo BITS32=@BITS32_FALSE@
	echo BITS64=@BITS64_FALSE@
	echo HAVE_BUILDTOOLS=@HAVE_BUILDTOOLS_FALSE@
	echo HAVE_EXTRA_MK=@HAVE_EXTRA_MK_FALSE@
	echo HAVE_MONETDB4=@HAVE_MONETDB4_FALSE@
	echo HAVE_MONETDB5=@HAVE_MONETDB5_FALSE@
	echo HAVE_MONETDB5_RDF=@HAVE_MONETDB5_RDF_FALSE@
	echo HAVE_MONETDB5_XML=@HAVE_MONETDB5_XML_FALSE@
	echo HAVE_MONETDB=@HAVE_MONETDB_FALSE@
	echo HAVE_PCRE=@HAVE_PCRE_FALSE@
	echo HAVE_PERL_DEVEL=@HAVE_PERL_DEVEL_FALSE@
	echo HAVE_PERL=@HAVE_PERL_FALSE@
	echo HAVE_PERL_SWIG=@HAVE_PERL_SWIG_FALSE@
	echo HAVE_PYTHON=@HAVE_PYTHON_FALSE@
	echo HAVE_RUBYGEM=@HAVE_RUBYGEM_FALSE@
	echo LINK_STATIC=@LINK_STATIC_FALSE@
	echo NATIVE_WIN32=@NATIVE_WIN32_FALSE@
	echo NEED_MX=@NEED_MX_FALSE@
	echo NOT_WIN32=@NOT_WIN32_FALSE@
	echo PROFILING=@PROFILING_FALSE@
	;;

    *)
	echo "$usage" >&2
	exit 1
	;;
    esac
    shift
done

exit 0
