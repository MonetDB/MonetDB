## Process this file with automake to produce Makefile.in

MTSAFE

INCLUDES = ../utils \
		   $(zlib_CFLAGS) \
		   $(bzip2_CFLAGS) \
		   $(snappy_CFLAGS) \
   		   $(lz4_CFLAGS) \
		   $(liblzma_CFLAGS) \
		   $(curl_CFLAGS)

lib_stream  =  {
	SOURCES = stream.c stream.h stream_socket.h
	VERSION = $(STREAM_VERSION)
	LIBS = WIN32?$(SOCKET_LIBS) \
	       WIN32?$(zlib_LIBS) \
	       WIN32?$(bzip2_LIBS) \
	       WIN32?$(snappy_LIBS) \
   	       WIN32?$(lz4_LIBS) \
	       WIN32?$(liblzma_LIBS) \
	       WIN32?$(curl_LIBS) \
	       WIN32?$(LTLIBICONV)
}

headers_common = {
	DIR = includedir/monetdb
	HEADERS = h
	SOURCES = stream_socket.h stream.h
}

headers_pc = {
	COND = NOT_WIN32
	HEADERS = pc
	DIR = libdir/pkgconfig
	SOURCES = monetdb-stream.pc.in
}
