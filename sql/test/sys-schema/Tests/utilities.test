CREATE OR REPLACE function table_id(sname varchar(1024), tname varchar(1024)) RETURNS INT
BEGIN
  RETURN SELECT min(id) from sys.tables where name = tname AND schema_id = (SELECT id from sys.schemas where name = sname);
END

