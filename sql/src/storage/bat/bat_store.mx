	ic->trunc = 0;
	list_append(i->columns, ic);

	table_insert(tr, sysic, &i->base.id, ic->c->base.name, &ic->trunc, &nr);

	sysic->base.wtime = sysic->s->base.wtime = tr->wtime = tr->stime;
	tr->schema_updates ++;
	return i;
}

void
sql_trans_drop_trigger(sql_trans *tr, sql_schema *s, char *name)
