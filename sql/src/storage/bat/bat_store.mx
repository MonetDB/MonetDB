static size_t
append_inserted(BAT *b, BAT *i )
{
	size_t nr = 0;
	BUN r;

	for (r = i->batInserted; r < BUNlast(i); r = BUNnext(i, r)) {
		BUNappend(b, BUNtail(i,r), TRUE);
		nr++;
	}
	return nr;
}

static size_t
copy_inserted(BAT *b, BAT *i )
{
	size_t nr = 0;
	BUN r;

	for (r = i->batInserted; r < BUNlast(i); r = BUNnext(i, r)) {
		BUNins(b, BUNhead(i,r), BUNtail(i,r), TRUE);
		nr++;
	}
	return nr;
}


