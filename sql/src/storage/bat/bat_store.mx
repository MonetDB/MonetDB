	sql_column *sys_func_col = find_sql_column(sys_tab_func, "id");
	ssize_t rid_func = column_find_row(tr, sys_func_col, &func->base.id, NULL);
	if (func->aggr) {
		sql_table *sys_tab_args = find_sql_table(syss, "args");
		sql_column *sys_args_col = find_sql_column(sys_tab_args, "func_id");
		ssize_t rid_args = column_find_row(tr, sys_args_col, &func->base.id, NULL);
		assert(rid_args != -1);
		table_delete(tr, sys_tab_args, rid_args);
	}

	assert(rid_func != -1);
	table_delete(tr, sys_tab_func, rid_func);

	sql_trans_drop_dependencies(tr, func->base.id);

	tr->schema_updates ++;

	if (drop_action)
		sql_trans_drop_all_dependencies(tr, syss, func->base.id, func->is_func ? FUNC_DEPENDENCY : PROC_DEPENDENCY);
}

