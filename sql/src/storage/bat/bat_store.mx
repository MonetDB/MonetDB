	cs_add(&tr->modules, m, TR_NEW);

	table_insert(tr, sysmodule, &m->base.id, m->base.name, m->internal);

	if (opt_mod) 
		do_load_module(tr, opt_mod);
	sysmodule->base.wtime = sysmodule->s->base.wtime = m->base.wtime = tr->wtime = tr->stime;
