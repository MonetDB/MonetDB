	b = temp_descriptor(c->bat.ubid);
	assert(b);
	b->batDirty |= 2;
	c->t->s->base.rtime = c->t->base.rtime = c->base.rtime = tr->stime;
	if (access == INS || access == UPD) {
		bat_set_access(b, BAT_WRITE);
		c->base.wtime = c->t->base.wtime = c->t->s->base.wtime = tr->wtime = tr->stime;
	}
