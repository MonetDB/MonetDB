@= simpledowncast
str @2_2_@1( @1 *res, @2 *v )
{
	lng val = *v;

	/* shortcut nil */
	if (*v == @2_nil) {
		*res = @1_nil;
		return(MAL_SUCCEED);
	}
	
	/* see if the number fits in the data type */
	if (val >= GDK_@1_min && val <= GDK_@1_max)	{
		*res = (@1)val;
		return(MAL_SUCCEED);
	} else {
		return throwException(MALEXCEPTION,"convert",
			"value (%d) exceeds limits of type @1\n", val);
	}
}
