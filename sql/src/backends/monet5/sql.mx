backend *
backend_create(int trace, mvc *m, Client c)
{
	backend *b = NEW(backend);

	b->console = isAdministrator(c);
	b->debug = 0;
	b->outbuf = NULL;
	b->out = NULL;
	b->trace = trace;
	b->language = 0;
	b->mvc = m;

	b->currSchema = NULL;
	b->currTable = NULL;
