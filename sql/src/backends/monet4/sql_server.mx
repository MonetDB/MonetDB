proc sql_diff (bat[any::1,any::2] b1, bat[any::1,any::3] b2) : bat[any::1,any::2] {
	if (count(b2) > 0)
		return kdiff(b1,b2);
	return b1;
}

proc sql_server_start(bit global) : void {
	var err := CATCH( mvc_init(int(monet_environment.find("sql_debug"))) );

	tzone_local(TIMEZONE("GMT"));

	if (isnil(err)){
		fork(sqllogmanager());

		fork(mapi_listen(
			int(monet_environment.find("sql_port")),
			5,
			"sqlclient",
			global
			)
		);
		# start a default mapi client for debugging, this should go once
		# MonetDB SQL gets stable.
		# fork(mapi_listen(int(monet_environment.find("mapi_port")), 5, ""));
	} else {
		printf(err);
		drop(sql_server);
	}
}

proc sql_server_start() : void {
	sql_server_start(false);
}

if (mod() = "main") {
	sql_server_start();
}
