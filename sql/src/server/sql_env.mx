int
sql_update_var(mvc *m, char *name)
{
	if (strcmp(name, "debug") == 0) {
		m->debug = backend_get_number(m, "debug");
	} else if (strcmp(name, "current_schema") == 0) {
		char *schema = backend_get_string(m, "current_schema");

		if (!mvc_set_schema(m, schema)) {
			GDKwarning("Schema (%s) missing\n", schema);
			return GDK_FAIL;
		}
	} else if (strcmp(name, "current_role") == 0) {
		char *role = backend_get_string(m, "current_role");

		if (!mvc_set_role(m, role)) {
			GDKwarning("Role (%s) missing\n", role);
			return GDK_FAIL;
		}
	} else if (strcmp(name, "current_timezone") == 0) {
		m->timezone = backend_get_number(m, "current_timezone") / 60;
	} else if (strcmp(name, "explain") == 0) {
		char *explain = backend_get_string(m, "explain");

		if (!explain || strcmp(explain, "") == 0)
			m->explain = m_normal;
		else if (strcmp(explain, "plan") == 0)
			m->explain = m_explain;
		else if (strcmp(explain, "profile") == 0)
			m->explain = m_profile;
		else if (strcmp(explain, "trace") == 0)
			m->explain = m_trace;
		else {
			GDKwarning("Session variable explain can only be set to 'plan', 'profile' or to the empty string\n");
			return GDK_FAIL;
		}
		m->mode = m_explain;
	} else if (strcmp(name, "cache") == 0) {
		m->cache = backend_get_number(m, "cache");
	}  else if (strcmp(name,"profile") == 0){
		int flag = backend_get_number(m, "profile");
		m->explain= flag? m_profile:m_normal;
	}  else if (strcmp(name,"trace") == 0){
		int flag = backend_get_number(m, "trace");
		m->explain= flag? m_trace:m_normal;
	}
	return GDK_SUCCEED;
}


