int
sql_sessions(mvc *m)
{
	char buf[BUFSIZ];
	sql_trans *tr = m->session->tr;
	sql_schema *tmp = mvc_bind_schema(m, "tmp");
	sql_table *s = mvc_bind_table(m, tmp, "sessions", LOCATION);
	int rw = SESSION_RW, ro = SESSION_RO;

	snprintf(buf, BUFSIZ, "%d", m->debug);
	table_insert(tr, s, "debug", buf, "int", &rw, NULL);

	buf[0] = 0;
	if (m->explain == m_normal)
		table_insert(tr, s, "explain", "", "varchar(8)", &rw, NULL);
	else if (m->explain == m_explain)
		table_insert(tr, s, "explain", "plan", "varchar(8)", &rw, NULL);
	else if (m->explain == m_profile)
		table_insert(tr, s, "explain", "profile", "varchar(8)", &rw, NULL);

	table_insert(tr, s, "current_schema", m->session->schema_name, "varchar(1024)", &rw, NULL);

	/* MonetDB/SQL user/current_user/session_user (authorization id) */
	table_insert(tr, s, "current_user", m->user, "varchar(1024)", &ro, NULL);

	/* MonetDB/SQL role/current_role/session_role */
	table_insert(tr, s, "current_role", m->role, "varchar(1024)", &rw, NULL);

	snprintf(buf, BUFSIZ, "%d", m->timezone * 60);
	table_insert(tr, s, "current_timezone", buf, "sec_interval", &rw, NULL);

	table_insert(tr, s, "cache", "true", "boolean", &rw, NULL);

/* M5 default session variables */
	table_insert(tr, s, "optimizer", "on", "varchar(1024)", &rw, NULL);
	if (m->explain == m_profile)
		table_insert(tr, s, "profile", "true", "boolean", &rw, NULL);
	else
		table_insert(tr, s, "profile", "false", "boolean", &rw, NULL);
	table_insert(tr, s, "trace", "false", "boolean", &rw, NULL);
/* Actually 'factory' and 'cache' are optimizer decisions too */
	return 0;
}

