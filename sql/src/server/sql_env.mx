int
sql_get_bit_var(mvc *sql, char *name)
{
	char *val = sql_get_var(sql, name);

	if (val && strcmp(val, "true") == 0) {
		_DELETE(val);
		return TRUE;
	}
	if (val)
		_DELETE(val);
	return FALSE;
}

