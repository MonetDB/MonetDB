static int cleanup = 0;

void mvc_exit()
{
	struct logger *l = logger;

	if (mvc_debug)
		fprintf(stderr, "mvc_exit\n");

	/* never started! */
	if (!logger)
		return ;

	MT_set_lock(mvc_lock, "mvc_commit");
	logger = NULL;
	while (cleanup) 
		MT_sleep_ms(100); 
	logger_exit(l); 
	logger_destroy(l); 

	trans_destroy(gtrans);
	MT_unset_lock(mvc_lock, "mvc_commit");

	parser_exit();
}

void 
mvc_logmanager()
{
 	int res = SQL_OK;

	if (!logger || log_changes(logger) < 100)
		return;

	MT_set_lock(mvc_lock, "mvc_commit");
	if (!logger)
		return;
	res = logger_restart(logger);
	cleanup = 1;
	MT_unset_lock(mvc_lock, "mvc_commit");
	if (res == SQL_OK)
		logger_cleanup(logger);
	cleanup = 0;
}

