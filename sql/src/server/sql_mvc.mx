sql_type *
trans_bind_type(sql_trans *tr, char *name )
{
	node *n;
	sql_type *t = NULL;

	if (tr->modules.set) for (n = tr->modules.set->h; n && !t; n = n->next){
		sql_module *m = n->data; 
		t = find_type(m, name);
	}
	if (!t)
		return NULL;
	t->base.rtime = tr->rtime;

	return t;
}

