void *sql_error( mvc * sql, int error_code, char *format, ... )
{
	va_list	ap;

	va_start (ap,format);
	if (sql->errstr[0] == '\0') 
		vsnprintf(sql->errstr, ERRSIZE-1, _(format), ap);
	if (!sql->session->status)
		sql->session->status = -error_code;
	va_end (ap);
	return NULL;
}

int parse_error(mvc * c, char *err)
{
	(void)sql_error( c, 4,
		 "!%s in: \"%s\"\n",
		 err, QUERY(c->scanner));
	return 1;
}
