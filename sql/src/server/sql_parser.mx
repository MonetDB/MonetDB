literal:
    string 	{ char *s = sql2str($1);
		  int len = _strlen(s);
		  sql_subtype t;
		  sql_find_subtype(&t, "char", len, 0 );
		  $$ = _newAtomNode( _atom_string(&t, s)); }

 |  HEXADECIMAL { int len = _strlen($1), i = 2, err = 0;
		  char buf[BUFSIZ];
		  char * hexa = $1;
	 	  sql_subtype t;
		  long res = 0;

		  while (i<len)
		  {
			res <<= 5;
			if ('0'<= hexa[i] && hexa[i] <= '9')
				res = res + (hexa[i] - '0');
			else if ('A' <= hexa[i] && hexa[i] <= 'F')
				res = res + (hexa[i] - 'A' + 10);
			else if ('a' <= hexa[i] && hexa[i] <= 'f')
				res = res + (hexa[i] - 'a' + 10);
			else
				err = 1; 
		  	i++;
		  }
		
		  if ( i >= 2 && i <= 6)
		  	sql_find_subtype(&t, "smallint", 16, 0);
		  else if ( i > 6 && i <= 10)
		  	sql_find_subtype(&t, "int", 32, 0);
		  else if ( i > 10 && i <= 18)
		  	sql_find_subtype(&t, "bigint", 64, 0);
		  else
			err = 1;
		  
		  if (err) {
			snprintf(buf, BUFSIZ, "invalid hexadecimal number or hexadecimal too large (%s)", $1);
			yyerror(buf);
			$$ = NULL;
			YYABORT;
		  } else {
			$$ = _newAtomNode( atom_int(&t, res));
		  }
		}
 |  sqlINT
		{ int digits = _strlen($1), err = 0, len = sizeof(lng);
		  lng value, *p = &value;
		  sql_subtype t;

		  lngFromStr($1, &len, &p);
		  if (value == lng_nil)
		  	err = 2;

		  /* find the most suitable data type for the given number */
		  if (!err) {
		    int bits = digits2bits(digits);
		    if (value >= GDK_sht_min && value <= GDK_sht_max)
		  	  sql_find_subtype(&t, "smallint", bits, 0 );
		    else if (value >= GDK_int_min && value <= GDK_int_max)
		  	  sql_find_subtype(&t, "int", bits, 0 );
		    else if ((value >= GDK_lng_min && value <= GDK_lng_max))
		  	  sql_find_subtype(&t, "bigint", bits, 0 );
		    else
			  err = 1;
		  }

		  if (err) {
			char buf[BUFSIZ];

			snprintf(buf, BUFSIZ, "integer value too large or not a number (%s)", $1);
			yyerror(buf);
			$$ = NULL;
			YYABORT;
		  } else {
		  	$$ = _newAtomNode( atom_int(&t, value));
		  }
		}
 |  INTNUM
		{ char *s = strip_extra_zeros(sa_strdup(SA, $1));
		  char *dot = strchr(s, '.');
		  int digits = _strlen(s) - 1;
		  int scale = digits - (int) (dot-s);
		  sql_subtype t;

		  if (digits <= 18) {
		  	double val = strtod($1,NULL);
		  	lng value = decimal_from_str(s);

		  	if (*s == '+' || *s == '-')
				digits --;
		  	sql_find_subtype(&t, "decimal", digits, scale );
		  	$$ = _newAtomNode( atom_dec(&t, value, val)); 
		   } else { 
		  	double val = strtod($1,NULL);

		  	sql_find_subtype(&t, "double", 51, 0 );
		  	$$ = _newAtomNode(atom_float(&t, val)); 
		   }
		}
 |  APPROXNUM
		{ sql_subtype t;
		  double val = strtod($1,NULL);

		  sql_find_subtype(&t, "double", 51, 0 );
		  $$ = _newAtomNode(atom_float(&t, val)); }
 |  sqlDATE string
		{ sql_subtype t;
		  atom *a;
		  int r;

 		  r = sql_find_subtype(&t, "date", 0, 0 );
		  if (!r || (a = atom_general(&t, $2, 0)) == NULL) {
			char buf[BUFSIZ];

			snprintf(buf, BUFSIZ, "incorrect date value (%s)", $2);
			yyerror(buf);
			$$ = NULL;
			YYABORT;
		  } else {
		  	$$ = _newAtomNode(a);
		} }
 |  TIME time_precision tz string
		{ sql_subtype t;
		  atom *a;
		  int r;

	          r = sql_find_subtype(&t, ($3)?"timetz":"time", $2, 0);
		  if (!r || (a = atom_general(&t, $4, 0)) == NULL) {
			char buf[BUFSIZ];

			snprintf(buf, BUFSIZ, "incorrect time value (%s)", $4);
			yyerror(buf);
			$$ = NULL;
			YYABORT;
		  } else {
		  	$$ = _newAtomNode(a);
		} }
 |  TIMESTAMP timestamp_precision tz string
		{ sql_subtype t;
		  atom *a;
		  int r;

 		  r = sql_find_subtype(&t, ($3)?"timestamptz":"timestamp",$2,0);
		  if (!r || (a = atom_general(&t, $4, 0)) == NULL) {
			char buf[BUFSIZ];

			snprintf(buf, BUFSIZ, "incorrect timestamp value (%s)", $4);
			yyerror(buf);
			$$ = NULL;
			YYABORT;
		  } else {
		  	$$ = _newAtomNode(a);
		} }
 |  interval_expression
 |  blob string
		{ sql_subtype t;
		  atom *a= 0;
		  int r;

		  $$ = NULL;
 		  r = sql_find_subtype(&t, "blob", 0, 0);
	          if (r && (a = atom_general(&t, $2, 0)) != NULL)
			$$ = _newAtomNode(a);
		  if (!$$) {
			char buf[BUFSIZ];

			snprintf(buf, BUFSIZ, "incorrect blob %s", $2);
			yyerror(buf);
			if (a)
				atom_destroy(a);
			YYABORT;
		  }
		}
 |  aTYPE string
		{ sql_subtype t;
		  atom *a= 0;
		  int r;

		  $$ = NULL;
		  r = sql_find_subtype(&t, $1, 0, 0);
	          if (r && (a = atom_general(&t, $2, 0)) != NULL)
			$$ = _newAtomNode(a);
		  if (!$$) {
			char buf[BUFSIZ];

			snprintf(buf, BUFSIZ, "incorrect %s %s", $1, $2);
			yyerror(buf);
			if (a)
				atom_destroy(a);
			YYABORT;
		  }
		}
 | type_alias string
		{ sql_subtype t; 
		  atom *a = 0;
		  int r;

		  $$ = NULL;
		  r = sql_find_subtype(&t, $1, 0, 0);
	          if (r && (a = atom_general(&t, $2, 0)) != NULL)
			$$ = _newAtomNode(a);
		  if (!$$) {
			char buf[BUFSIZ];

			snprintf(buf, BUFSIZ, "incorrect %s %s", $1, $2);
			yyerror(buf);
			if (a)
				atom_destroy(a);
			YYABORT;
		  }
		}
 | IDENT string
		{ mvc *m = (mvc*)parm;
		  sql_type *t = mvc_bind_type(m, $1);
		  atom *a;

		  $$ = NULL;
		  if (t) {
		  	sql_subtype tpe;
			sql_init_subtype(&tpe, t, 0, 0);
			a = atom_general(&tpe, $2, 0);
			if (a)
				$$ = _newAtomNode(a);
		  }
		  if (!t || !$$) {
			char buf[BUFSIZ];

			snprintf(buf, BUFSIZ, "type (%s) unknown", $1);
			yyerror(buf);
			YYABORT;
		  }
		}
 |  BOOL_FALSE
		{ sql_subtype t;
		  sql_find_subtype(&t, "boolean", 0, 0 );
		  $$ = _newAtomNode( atom_bool(&t, FALSE)); }
 |  BOOL_TRUE
		{ sql_subtype t;
		  sql_find_subtype(&t, "boolean", 0, 0 );
		  $$ = _newAtomNode( atom_bool(&t, TRUE)); }
 ;

interval_expression:
   INTERVAL opt_sign string interval_qualifier { 
		sql_subtype t;
		int sk, ek, tpe;
		mvc *m = (mvc*)parm;
	  	lng i = 0;
		int r = 0;

		$$ = NULL;
	  	if ( (tpe = parse_interval_qualifier( m, $4, &sk, &ek )) < 0){
			yyerror("incorrect interval");
			YYABORT;
	  	} else {
			if (tpe == 0){
				r=sql_find_subtype(&t, "month_interval", ek, sk);
			} else {
				r=sql_find_subtype(&t, "sec_interval", ek, sk);
			}
	  	}
	  	if (!r || (tpe = parse_interval( m, $2, $3, sk, ek, &i)) < 0 ){
			yyerror("incorrect interval");
			$$ = NULL;
			YYABORT;
	  	} else {
	  		$$ = _newAtomNode( atom_int(&t, i));
	  	}
	}

