atom:
    literal
	{ 
	  mvc *m = (mvc*)parm;
	
	  if (CACHE_MODE(m->mode) && 
	      (!m->argfixed || m->argc < MAXPARAMS-2) && m->cache){
	  	/* replace by argument */
	  	AtomNode *an = (AtomNode*)$1;
	
	  	sql_add_arg( m, an->a);
		an->a = NULL;
	  	/* we miss use SQL_COLUMN also for param's, maybe
	     		change SQL_COLUMN to SQL_IDENT */
 	  	$$ = _symbol_create_list( SQL_COLUMN,
			append_int(L(), m->argc-1));
	   } else {
	  	AtomNode *an = (AtomNode*)$1;
		atom *a = an->a; 
		an->a = atom_copy(a, SA); 
		atom_destroy(a);
		$$ = $1;
	   }
	}
 ;


