/*
 * @-
 * The core modules of Monet provide just a limited set of
 * mathematical operators. The extensions required to support
 * SQL-99 are shown below. At some point they also should be
 * moved to module code base.
 */
@= round
str 
@1_dec_round_wrap( @1 *res, @1 *v, @1 *r )
{
	@1 val = *v;
	@1 add = *r;

	/* shortcut nil */
	if (*v == @1_nil) {
		*res = @1_nil;
		return NULL;
	}

	add >>=1;
	if (val < 0) 
		add = -add;
	val += add; 
	val /= *r;
	*res = val;
	return NULL;
}

str 
@1_round_wrap( @1 *res, @1 *v, int *d, int *s, bte *r )
{
	/* shortcut nil */
	if (*v == @1_nil) {
		*res = @1_nil;
	} else if (-*r > *d) {
		*res = 0;
	} else if (*r > 0 && *r < *s) {
		int dff = *s - *r;
#ifdef HAVE_HGE
		hge rnd = scales[dff]>>1;
		hge lres;
#else
		lng rnd = scales[dff]>>1;
		lng lres;
#endif
		if (*v > 0)
			lres = (((*v + rnd)/scales[dff])*scales[dff]);
		else
			lres = (((*v - rnd)/scales[dff])*scales[dff]);
#ifdef HAVE_HGE
		assert((hge) GDK_@1_min < lres && lres <= (hge) GDK_@1_max);
#else
		assert((lng) GDK_@1_min < lres && lres <= (lng) GDK_@1_max);
#endif
		*res = (@1) lres;
	} else if (*r <= 0 && -*r + *s > 0) {
		int dff = -*r + *s;
#ifdef HAVE_HGE
		hge rnd = scales[dff]>>1;
		hge lres;
#else
		lng rnd = scales[dff]>>1;
		lng lres;
#endif
		if (*v > 0)
			lres = (((*v + rnd)/scales[dff])*scales[dff]);
		else
			lres = (((*v - rnd)/scales[dff])*scales[dff]);
#ifdef HAVE_HGE
		assert((hge) GDK_@1_min < lres && lres <= (hge) GDK_@1_max);
#else
		assert((lng) GDK_@1_min < lres && lres <= (lng) GDK_@1_max);
#endif
		*res = (@1) lres;
	} else {
		*res = *v;
	}
	return MAL_SUCCEED;
}

