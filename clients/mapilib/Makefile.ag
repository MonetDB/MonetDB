headers_mapi = {
	DIR = includedir/monetdb
	HEADERS = h
	SOURCES = mapi.h mapi_querytype.h
}

headers_pc = {
	COND = NOT_WIN32
	HEADERS = pc
	DIR = libdir/pkgconfig
	SOURCES = monetdb-mapi.pc.in
}
