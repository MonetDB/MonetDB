MTSAFE

INCLUDES = ../../common/stream ../../common/utils \
		   $(MSGCONTROL_FLAGS) $(openssl_CFLAGS)

lib_mapi = {
	VERSION = $(MAPI_VERSION)
	SOURCES = mapi.c mapi_prompt.h mapi.rc
	LIBS = ../../common/utils/libmcrypt \
		WIN32?../../common/stream/libstream \
		WIN32?../../common/utils/libmutils \
		WIN32?$(SOCKET_LIBS) \
		WIN32?$(openssl_LIBS)
